<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#082AE9"
       android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="#0A23A5"
        android:padding="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/leagueName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="League Name"
                    android:background="#A50C0C"
                    android:textAlignment="center"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/homeTeam"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Home Team"
                    android:textAlignment="textStart"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="63dp"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:textAlignment="center"
                    android:textColor="#F3ECEC"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/awayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Away Team"
                    android:textAlignment="textStart"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date and time"
                    android:textAlignment="center"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/odds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Odds"
                    android:textAlignment="center"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/prediction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prediction"
                    android:background="#C71111"
                    android:textAlignment="center"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Result"
                    android:textAlignment="center"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textAlignment="center"
                    android:textColor="@color/about_libraries_special_button_openSource_dark"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>




